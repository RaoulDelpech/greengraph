  "definitions": [
    {
      "id": "biodiversite",
      "terme": "Biodiversité",
      "definition": "Variabilité des organismes vivants de toute origine, y compris les écosystèmes terrestres, marins et autres écosystèmes aquatiques, ainsi que les complexes écologiques dont ils font partie. Elle comprend la diversité au sein des espèces (génétique), entre les espèces, et des écosystèmes.",
      "sources": [
        {
          "titre": "Convention sur la diversité biologique (CDB)",
          "auteur": "Nations Unies",
          "url": "https://www.cbd.int/convention/text/",
          "annee": 1992,
          "type": "loi"
        },
        {
          "titre": "Qu'est-ce que la biodiversité ?",
          "auteur": "MNHN",
          "url": "https://www.mnhn.fr/fr/qu-est-ce-que-la-biodiversite",
          "annee": 2021,
          "type": "institution"
        }
      ],
      "categorie": "biodiversite",
      "tags": ["diversité", "espèces", "écosystèmes", "génétique"],
      "relations": [
        { "cible": "ecosysteme", "type": "renvoie_a", "score": 90 },
        { "cible": "espece", "type": "renvoie_a", "score": 85 },
        { "cible": "services-ecosystemiques", "type": "renvoie_a", "score": 80 },
        { "cible": "erosion-biodiversite", "type": "oppose_a", "score": 90 }
      ],
      "exemples": [
        "La forêt amazonienne abrite environ 10% de toutes les espèces connues",
        "Un gramme de sol peut contenir jusqu'à 10 milliards de micro-organismes"
      ],
      "synonymes": ["diversité biologique", "diversité du vivant"]
    },
    {
      "id": "ecosysteme",
      "terme": "Écosystème",
      "definition": "Ensemble dynamique formé par une communauté d'êtres vivants (biocénose) et son environnement physico-chimique (biotope), en interaction constante. Les écosystèmes peuvent être de tailles très variables : une mare, une forêt, un océan, ou la biosphère entière.",
      "sources": [
        {
          "titre": "Fundamentals of Ecology",
          "auteur": "Odum, E.P.",
          "annee": 1953,
          "type": "livre"
        },
        {
          "titre": "Les écosystèmes",
          "auteur": "CNRS",
          "url": "https://www.cnrs.fr/",
          "annee": 2020,
          "type": "institution"
        }
      ],
      "categorie": "biodiversite",
      "tags": ["écologie", "biocénose", "biotope", "interactions"],
      "relations": [
        { "cible": "biodiversite", "type": "renvoie_a", "score": 90 },
        { "cible": "services-ecosystemiques", "type": "renvoie_a", "score": 85 },
        { "cible": "chaine-alimentaire", "type": "renvoie_a", "score": 75 },
        { "cible": "resilience-ecologique", "type": "proche_de", "score": 70 }
      ],
      "exemples": [
        "Écosystème forestier tempéré",
        "Récif corallien",
        "Zone humide"
      ]
    },
    {
      "id": "services-ecosystemiques",
      "terme": "Services écosystémiques",
      "definition": "Bénéfices que les êtres humains tirent des écosystèmes. Ils sont classés en quatre catégories : services d'approvisionnement (nourriture, eau, bois), de régulation (climat, pollinisation, purification), culturels (récréation, valeur esthétique) et de soutien (cycle des nutriments, formation des sols).",
      "sources": [
        {
          "titre": "Millennium Ecosystem Assessment",
          "auteur": "Nations Unies",
          "url": "https://www.millenniumassessment.org/",
          "annee": 2005,
          "type": "rapport"
        },
        {
          "titre": "The Economics of Ecosystems and Biodiversity (TEEB)",
          "url": "http://teebweb.org/",
          "annee": 2010,
          "type": "rapport"
        }
      ],
      "categorie": "biodiversite",
      "tags": ["valeur", "bénéfices", "nature", "économie"],
      "relations": [
        { "cible": "ecosysteme", "type": "renvoie_a", "score": 90 },
        { "cible": "biodiversite", "type": "renvoie_a", "score": 85 },
